# ======================================================================

DIR=hw09

# ======================================================================

CC=gcc
#CFLAGS=-Wall -O2 -mcmodel=large
CFLAGS=-mcmodel=large
EXE_FILES=sort-test
SRC_FILES=sort-test.c sort.c sort.h

# ======================================================================

all:	$(EXE_FILES)

sort-test:	sort-test.c sort.c

# ======================================================================

run:	$(EXE_FILES)
	@for exe in $(EXE_FILES); \
	do \
	  echo $$ ./$$exe; \
	  ./$$exe; \
	done

# ======================================================================

indent:	$(SRC_FILES)
	indent -i2 -kr -nfca $(SRC_FILES)
	@rm -rf *~

# ======================================================================

list:	$(SRC_FILES)
	@rm -f $(DIR)-src.txt
	@for src in $(SRC_FILES); \
	do \
	  echo // ====================================================================== >> $(DIR)-src.txt; \
	  echo // File: $$src >> $(DIR)-src.txt; \
	  echo // ====================================================================== >> $(DIR)-src.txt; \
	  cat ./$$src >> $(DIR)-src.txt; \
	done

# ======================================================================

clean:
	@rm -rf *~ $(EXE_FILES) $(DIR)-src.txt DICT_OUT.txt

# ======================================================================
